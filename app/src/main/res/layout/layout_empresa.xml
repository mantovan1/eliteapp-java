<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/cardview_dark_background">
    <ImageView android:id="@+id/img_empresa" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView android:id="@+id/txt_nome_empresa" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txt_categoria" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>